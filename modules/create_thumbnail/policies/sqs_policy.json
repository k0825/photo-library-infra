{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": "*",
      "Action": "sqs:SendMessage",
      "Resource": "arn:aws:sqs:*:*:${sqs_queue_name}",
      "Condition": {
        "ArnEquals": { "aws:SourceArn": "arn:aws:s3:::${bucket_name}" }
      }
    }
  ]
}